<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title><%= context %> | Allday wipes</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="/static/assets/images/favicon.ico">

        <!-- Bootstrap Tables css -->
        <link href="/static/assets/libs/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" type="text/css" />

    
		<!-- App css -->
		<link href="/static/assets/css/config/modern/bootstrap.min.css" rel="stylesheet" type="text/css" id="bs-default-stylesheet" />
		<link href="/static/assets/css/config/modern/app.min.css" rel="stylesheet" type="text/css" id="app-default-stylesheet" />

		<link href="/static/assets/css/config/modern/bootstrap-dark.min.css" rel="stylesheet" type="text/css" id="bs-dark-stylesheet" />
		<link href="/static/assets/css/config/modern/app-dark.min.css" rel="stylesheet" type="text/css" id="app-dark-stylesheet" />

		<!-- icons -->
		<link href="/static/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    </head>

    <!-- body start -->
    <body class="loading" data-layout-mode="detached" data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": true}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'>

   
        <div id="wrapper">
            <%- include ('./partials/topnav') %>

            <div class="left-side-menu">

                <div class="h-100" data-simplebar>
                    
                     <%- include ('./partials/siderbar') %>
                    

                    <div class="clearfix"></div>

                </div>
                

            </div>
            
            <style>
             
                .page-title, .font-16{
                    font-family: Geogia; 
                }
                .text-truncate{
                    font-family: geogia;
                    font-weight: bolder;
                    font-size: 1rem;
                }
                
            </style>
            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Allday wipes</a></li>
                                            <li class="breadcrumb-item active"><%= context %></li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title"><%= context %></h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 
                        
                        <%- include ('./partials/message') %>
                        
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body">
                                        
                                        <button type="button" class="btn btn-primary mb-3"><a href="/product/add" class="text-light">Add Product</a></button>
                                        
                                        <table data-toggle="table" data-page-size="5" data-buttons-class="xs btn-light" data-pagination="true"
                                        class="table-bordered">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Image</th>
                                                <th>Product</th>
                                                <th>Unit Price</th>
                                                <th>Stock In</th>
                                                <th>Stock Out</th>
                                                <th>Stock Available</th>
                                                <th>Status</th>
                                               
                                            </tr>
                                        </thead>
                                    
                                    
                                        <tbody>
                                            <% allProduct.forEach(function(product){ %>

                                            <tr>
                                                
                                                <td>
                                                    <a href="/product/<%=product.id %>">
                                                        <img src="/static/uploads/products/<%=product.image %>" alt="product-img" height="32" />
                                                    </a>
                                                    
                                                </td>
                                                <td>
                                                    <a href="/product/<%= product.id %>">

                                                        <%= product.product_name %>
                                                    </a>
                                                </td>
                                                
                                                <td>
                                                    <%= product.uty_price %>
                                                </td>
                                                <td>
                                                    <%= product.stock_in %>
                                                </td>
                                                <td>
                                                    <%= product.stock_out %>
                                                </td>
                                                <td>
                                                    <% if(product.stock_available < 11) {%>
                                                            <h5> <%= product.stock_available %> <span class="ml-2 badge bg-warning">Low !</span></h5>
                                                    <% } else { %>
                                                        <%= product.stock_available %>
                                                    <% } %>
                                                </td>
                                                
                                                <td>
                                                    <% if(product.stock_available > 0) {%>
                                                            <h5> <span class="badge bg-success">Available</span></h5>
                                                    <% } else { %>
                                                        <h5> <span class="badge bg-warning">Unavailable</span></h5>
                                                    <% } %>
                                                </td>

                                            </tr>
                                        <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div> <!-- end card-->
                        </div> <!-- end col-->
                    </div>
                    <!-- end row -->

                    <!-- x-end of the users table -->
                </div> <!-- content -->

                <!-- Footer Start -->
                <%- include ('./partials/footer') %>
                <!-- end Footer -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        
        <!-- /Right-bar -->

        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>

        <!-- Vendor js -->
        <script src="/static/assets/js/vendor.min.js"></script>

        <!-- Bootstrap Tables js -->
        <script src="/static/assets/libs/bootstrap-table/bootstrap-table.min.js"></script>

        <!-- Init js -->
        <script src="/static/assets/js/pages/bootstrap-tables.init.js"></script>

        <!-- App js -->
        <script src="/static/assets/js/app.min.js"></script>
        
    </body>
</html>